{
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "target": "es2020",
    // Not ideal but required because of https://github.com/discordjs/discord.js/issues/8816
    // This should be removed once the discord.js internal issues are fixed.
    "skipLibCheck": true,
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./index.d.ts",
    "./environment.d.ts",
    "./src",
    "./__tests__"
  ]
}
