{
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2020"
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "./index.d.ts",
    "./src"
  ]
}
