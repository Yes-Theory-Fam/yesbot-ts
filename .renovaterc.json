{
  "schedule": [
    "every weekend"
  ],
  "automerge": true,
  "automergeStrategy": "rebase",
  "automergeType": "pr",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "pin",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "npm",
    "dockerfile"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "prisma",
        "typegraphql-prisma",
        "@prisma/client"
      ],
      "labels": [
        "renovate",
        "prisma"
      ],
      "groupName": "prisma packages"
    },
    {
      "matchPackageNames": [
        "ts-jest",
        "jest",
        "@types/jest"
      ],
      "groupName": "jest packages"
    },
    {
      "matchPackageNames": [
        "discord.js",
        "discord-api-types",
        "@discordjs/builders",
        "@discordjs/rest"
      ],
      "groupName": "discord packages"
    },
    {
      "rangeStrategy": "replace",
      "matchPackageNames": [
        "@types/node"
      ],
      "fileMatch": [
        "(^|/)\\.nvmrc$",
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "groupName": "node version"
    }
  ]
}
