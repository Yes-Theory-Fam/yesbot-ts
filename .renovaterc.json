{
  "schedule": [
    "every weekend"
  ],
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "pin",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "npm",
    "dockerfile"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "prisma",
        "typegraphql-prisma"
      ],
      "labels": [
        "renovate",
        "prisma"
      ],
      "groupName": "prisma packages"
    },
    {
      "matchPackageNames": [
        "ts-jest",
        "jest"
      ],
      "groupName": "jest packages"
    },
    {
      "rangeStrategy": "replace",
      "matchPackageNames": [
        "@types/node"
      ],
      "fileMatch": [
        "(^|/)\\.nvmrc$",
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "groupName": "node version"
    }
  ]
}
